{
  // ========== üîß PERFORMANCE OPTIMIZATIONS ==========
  "editor.minimap.showSlider": "always",
  "editor.minimap.size": "proportional",
  "editor.minimap.scale": 1,
  "editor.smoothScrolling": true,
  "editor.largeFileOptimizations": false,
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/objects/**": true,
    "**/dist/**": true,
    "**/.trunk/*": true
  },
  "explorer.openEditors.visible": 1,
  "workbench.enableExperiments": false,
  "workbench.startupEditor": "none",
  "files.maxConcurrentThreads": 4,
  "search.maxResults": 1000,
  "typescript.tsserver.maxTsServerMemory": 4096,
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.tips.enabled": false,
  "workbench.editor.restoreViewState": false,

  // ========== üìù CORE EDITOR SETTINGS ==========
  "editor.fontFamily": "SF Mono, 'Fira Code', 'SF Pro Text Medium' , monospace",
  "editor.fontSize": 13,
  "editor.fontWeight": 500,
  "editor.lineHeight": 1.8,
  "editor.tabSize": 6,
  "workbench.editor.showTabs": "multiple",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderFinalNewline": "off",
  "editor.folding": true,
  "editor.guides.indentation": false,
  "editor.stickyScroll.enabled": false,
  "editor.renderControlCharacters": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 15,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "editor.mouseWheelZoom": true,
  "editor.cursorBlinking": "solid",
  "editor.colorDecorators": false, // T·∫Øt preview m√†u trong file CSS n·∫øu kh√¥ng c·∫ßn
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic",
          "foreground": "#7f848e"
        }
      }
    ]
  },

  // ========== üß† INTELLIGENT CODING ==========
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.suggest.showIcons": true,
  "editor.suggestSelection": "first",
  "editor.quickSuggestionsDelay": 100,
  "editor.quickSuggestions": {
    "strings": true,
    "comments": false,
    "other": true
  },
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.autoSurround": "languageDefined",
  "editor.snippetSuggestions": "inline",
  "editor.wordBasedSuggestions": "allDocuments",
  "editor.suggest.preview": true,
  "editor.inlineSuggest.suppressSuggestions": true,

  // ========== üåà UI CUSTOMIZATION ==========
  "workbench.iconTheme": "flow-light",
  "workbench.productIconTheme": "bongocat",
  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 3,
  "workbench.activityBar.location": "top",
  "breadcrumbs.enabled": false,
  "window.restoreWindows": "none",
  "window.newWindowDimensions": "inherit",
  "window.zoomLevel": -1,
  "window.zoomPerWindow": true,
  "window.density.editorTabHeight": "compact",
  "glassit.alpha": 255,

  // ========== üé® COLOR CUSTOMIZATION ==========
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#FFB86C",
    "editorBracketHighlight.foreground2": "#FF79C6",
    "editorBracketHighlight.foreground3": "#BD93F9",
    "editorBracketHighlight.foreground4": "#50FA7B",
    "editorBracketHighlight.foreground5": "#F1FA8C",
    "editorBracketHighlight.foreground6": "#8BE9FD",
    "editorBracketHighlight.unexpectedBracket.foreground": "#FF5555",
    "statusBar.background": "#171717",
    "statusBar.noFolderBackground": "#000000",
    "statusBar.debuggingBackground": "#000000",
    "statusBar.foreground": "#FFFFFF",
    "statusBar.debuggingForeground": "#FFFFFF"
  },

  // ========== üê± GITHUB COPILOT ==========
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,

  // ========== üß™ ERROR LENS ==========
  "errorLens.messageTemplate": "$severity $message",
  "errorLens.severityText": ["üçé", "üçä", "‚óâ", "‚õÜ"],
  "errorLens.replace": [
    { "matcher": "Missing semicolon", "message": ";" },
    { "matcher": "Missing return type on (.+)", "message": "Type $1" },
    { "matcher": "Missing return type on", "message": "<==" },
    { "matcher": "Missing return type on", "message": "(„ÄÇ_„ÄÇ)" },
    { "matcher": "Unexpected token", "message": "üî¥" },
    { "matcher": "Cannot find name '(.+)'", "message": "Name $1 not found" },
    {
      "matcher": "Property '(.+)' does not exist on type '(.+)'",
      "message": "Property $1 not in $2"
    },
    { "matcher": "Unexpected end of input", "message": "EOF" },
    {
      "matcher": "Unterminated string constant",
      "message": "String not closed"
    }
  ],
  "errorLens.gutterIconsEnabled": true,
  "errorLens.gutterEmoji": {
    "error": "üî•",
    "warning": "üçä",
    "info": "üò∂‚Äçüå´Ô∏è",
    "hint": "üçé"
  },
  "errorLens.scrollbarHackEnabled": true,
  "errorLens.codeLensTemplate": "$severity",
  "errorLens.decorations": {
    "warningMessage": {
      "textDecoration": ";background:linear-gradient(to right, #cca726, #ff8800);border-radius:0.3em;padding:0 0.5ch;",
      "color": "#fff",
      "fontWeight": "bold"
    },
    "errorMessage": {
      "textDecoration": ";background:linear-gradient(to right, #d044eb, #ff0000);border-radius:0.3em;padding:0 0.5ch;",
      "color": "#fff",
      "fontWeight": "bold"
    },
    "infoMessage": {
      "textDecoration": ";background:linear-gradient(to right, #0088ff, #0a9c33);border-radius:0.3em;padding:0 0.5ch;",
      "color": "#fff",
      "fontWeight": "bold"
    }
  },

  // ========== üß™ GIT SETTINGS ==========
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "always",

  // ========== üñ•Ô∏è TERMINAL ==========
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.fontFamily": "'Hack Nerd Font', Monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.shellIntegration.showCommandGuide": true,
  "terminal.integrated.suggest.enabled": true,
  "terminal.integrated.suggest.builtinCompletions": true,

  // ========== üßº FORMAT & LINT ==========
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "Vue.volar"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  // ========== üìÅ FILE & EXPLORER ==========
  "explorer.sortOrder": "type",
  "explorer.compactFolders": false,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.trunk/*": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true
  },

  // ========== üß† LANGUAGE SPECIFIC ==========
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vue.server.hybridMode": true,

  // ========== üêæ FUN STUFF ==========
  "powermode.enabled": true,
  "powermode.combo.counterEnabled": "hide",
  "powermode.combo.timerEnabled": "hide",
  "powermode.shake.enabled": false,
  "vscode-pets.petSize": "medium",
  "vscode-pets.theme": "winter",

  // ========== üßº MISC ==========
  "diffEditor.codeLens": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "cody.commandCodeLenses": true,
  "emptyIndent.removeIndent": true,
  "emptyIndent.highlightIndent": true,
  "emptyIndent.highlightColor": "rgba(246,36,89,0.6)",
  "emptyIndent.exclude": [
    ".md",
    ".json",
    ".log",
    ".js",
    ".jsx",
    ".tsx",
    ".vue"
  ],
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:claude-3.5-sonnet"
}
